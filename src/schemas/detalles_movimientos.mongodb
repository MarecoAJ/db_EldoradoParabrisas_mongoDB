use("db_eldoradoparabrisas");

db.createCollection("detalles_movimientos", {
    validator: {
        $jsonSchema: {
            bsonType: "object",
            required: ["movimiento_id", "tipo_pago_id", "fecha_insercion", "estado"],
            additionalProperties: false,
            properties: {
                movimiento_id: {
                    bsonType: "string"
                },
                tipo_pago_id: {
                    bsonType: "string"
                },
                fecha_insercion: {
                    bsonType: "date"
                },
                estado: {
                    bsonType: "int",
                    minimum: 0,
                    maximum: 1
                }
            }
        }
    }
});