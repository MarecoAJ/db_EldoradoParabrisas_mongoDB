use("db_eldoradoparabrisas");

db.createCollection("tipos_cristales", {
    validator: {
        $jsonSchema: {
            bsonType: "object",
            required: ["descrip_tipo_cristal", "fecha_insercion", "estado"],
            additionalProperties: false,
            properties: {
                descrip_tipo_cristal: {
                    bsonType: "string"
                },
                fecha_insercion: {
                    bsonType: "date"
                },
                estado: {
                    bsonType: "int",
                    minimum: 0,
                    maximum: 1
                }
            }
        }
    }
});